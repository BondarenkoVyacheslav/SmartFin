# Dockerfile.coingecko
FROM python:3.12-slim

WORKDIR /app

# Ставим зависимости (подставь свой способ: uv/poetry/pip)
COPY pyproject.toml poetry.lock* ./
RUN pip install --no-cache-dir "strawberry-graphql[asgi]" redis httpx "uvicorn[standard]"  # + твои зависимости

COPY . .

ENV PYTHONUNBUFFERED=1

CMD ["uvicorn", "apps.marketdata.providers.Crypto.CoinGecko.graphql_app:app", "--host", "0.0.0.0", "--port", "8000"]
